generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum UserRole {
  CLIENT
  PROFESSIONAL
}

enum InviteStatus {
  PENDING
  ACCEPTED
  REJECTED
  EXPIRED
}

enum MemberRole {
  ADMIN
  MEMBER
}

enum ServicePriceType {
  FIXED
  PER_HOUR
  QUOTATION
}

enum QuotationStatus {
  PENDING
  SENT
  ACCEPTED
  REJECTED
  CANCELED
}

// Auth Domain
model User {
  id           String        @id @default(uuid())
  name         String
  email        String        @unique
  passwordHash String        @map("password_hash")
  role         UserRole      @default(CLIENT)
  createdAt    DateTime      @default(now()) @map("created_at")
  updatedAt    DateTime      @updatedAt @map("updated_at")

  // Relationships
  tokens             Token[]
  userProfile        UserProfile?
  organizationOwner  Organization?
  memberships        Member[]
}

model Token {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  token     String   @unique
  type      String // 'access' | 'refresh'
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("tokens")
}

// Client Domain
model UserProfile {
  id        String   @id @default(uuid())
  userId    String   @unique @map("user_id")
  cpf       String   @unique
  phone     String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relationships
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  quotations Quotation[]
  addresses Address[]

  @@map("user_profiles")
}

// Organization Domain
model Organization {
  id          String   @id @default(uuid())
  ownerId     String   @unique @map("owner_id")
  name        String
  slug        String   @unique
  cnpj        String   @unique
  description String
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relationships
  owner         User          @relation(fields: [ownerId], references: [id])
  addresses     Address[]
  members       Member[]
  invites       Invite[]
  proProfile    ProProfile?
  quotations    Quotation[] // Quotations received by the organization
}

model Member {
  id             String     @id @default(uuid())
  organizationId String     @map("organization_id")
  userId         String     @map("user_id")
  role           MemberRole @default(MEMBER)
  createdAt      DateTime   @default(now()) @map("created_at")
  updatedAt      DateTime   @updatedAt @map("updated_at")

  // Relationships
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([organizationId, userId])
  @@map("members")
}

model Invite {
  id             String       @id @default(uuid())
  organizationId String       @map("organization_id")
  recipientEmail String       @map("recipient_email")
  role           MemberRole
  status         InviteStatus @default(PENDING)
  expiresAt      DateTime     @map("expires_at")
  createdAt      DateTime     @default(now()) @map("created_at")
  updatedAt      DateTime     @updatedAt @map("updated_at")

  // Relationships
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, recipientEmail])
  @@map("invites")
}

model ProProfile {
  id             String   @id @default(uuid())
  organizationId String   @unique @map("organization_id")
  specialties    String[]
  rating         Float    @default(0)
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  // Relationships
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  services     Service[]

  @@map("pro_profiles")
}

// Shared Model (Address Value Object as a Model)
model Address {
  id             String        @id @default(uuid())
  street         String
  number         String
  complement     String?
  neighborhood   String
  city           String
  state          String
  zipCode        String        @map("zip_code")
  createdAt      DateTime      @default(now()) @map("created_at")
  updatedAt      DateTime      @updatedAt @map("updated_at")

  // Relationships (optional for both)
  userProfileId  String?       @map("user_profile_id")
  userProfile    UserProfile?  @relation(fields: [userProfileId], references: [id])

  organizationId String?       @map("organization_id")
  organization   Organization? @relation(fields: [organizationId], references: [id])

  @@map("addresses")
}

// Services Domain
model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  slug      String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relationships
  services Service[]

  @@map("categories")
}

model Service {
  id             String           @id @default(uuid())
  organizationId String           @map("organization_id")
  categoryId     String           @map("category_id")
  title          String
  description    String
  priceType      ServicePriceType @map("price_type")
  basePrice      Float?           @map("base_price")
  createdAt      DateTime         @default(now()) @map("created_at")
  updatedAt      DateTime         @updatedAt @map("updated_at")

  // Relationships
  organization ProProfile @relation(fields: [organizationId], references: [organizationId], onDelete: Cascade)
  category     Category   @relation(fields: [categoryId], references: [id])
  quotationItems QuotationItem[]

  @@map("services")
}

// Quotation Domain
model Quotation {
  id             String          @id @default(uuid())
  clientId       String          @map("client_id")
  organizationId String          @map("organization_id")
  status         QuotationStatus @default(PENDING)
  description    String
  totalPrice     Float           @map("total_price")
  expiresAt      DateTime        @map("expires_at")
  createdAt      DateTime        @default(now()) @map("created_at")
  updatedAt      DateTime        @updatedAt @map("updated_at")

  // Relationships
  client       UserProfile  @relation(fields: [clientId], references: [userId]) // Assuming clientId is the userId of the client
  organization Organization @relation(fields: [organizationId], references: [id])
  items        QuotationItem[]

  @@map("quotations")
}

model QuotationItem {
  id          String   @id @default(uuid())
  quotationId String   @map("quotation_id")
  serviceId   String   @map("service_id")
  description String
  quantity    Int
  unitPrice   Float    @map("unit_price")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relationships
  quotation Quotation @relation(fields: [quotationId], references: [id], onDelete: Cascade)
  service   Service   @relation(fields: [serviceId], references: [id])

  @@map("quotation_items")
}
